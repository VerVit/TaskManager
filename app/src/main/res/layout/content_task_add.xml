<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout_2activity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.vitaliy.taskmanager.activity.TaskAddActivity">

    <EditText
        android:id="@+id/editText_taskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="@string/editText_task"
        android:inputType="textPersonName"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_task"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText_taskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="top"
        android:hint="@string/editText_description"
        android:inputType="textMultiLine"
        android:lines="3"
        android:maxLines="3"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_description"
        android:textStyle="italic" />


</LinearLayout>
