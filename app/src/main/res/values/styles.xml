<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:itemBackground">@drawable/selector_toolbar</item>
        <item name="itemBackground">@drawable/selector_toolbar</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="textViewLarge_setting">
        <item name="android:textSize">28sp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="textViewMedium_setting">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="imageButton_setting">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>


</resources>
